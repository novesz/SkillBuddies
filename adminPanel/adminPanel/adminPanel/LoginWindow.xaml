<Window x:Class="adminPanel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="420" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#7FA0D8">

    <Grid Margin="18">
        <Border CornerRadius="18" Background="#88FFFFFF" Padding="22">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="SkillBuddies Admin"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1D1D1F"/>

                <TextBlock Grid.Row="1"
                           Text="Please sign in with an admin account."
                           Margin="0,8,0,18"
                           Foreground="#2B2B2B"/>

                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                    <TextBlock Text="Email" Foreground="#2B2B2B" FontWeight="SemiBold"/>
                    <Border CornerRadius="12" Background="#E9DDF7" Padding="12" Margin="0,6,0,0">
                        <TextBox x:Name="TxtEmail"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontSize="14"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="3" Margin="0,0,0,8">
                    <TextBlock Text="Password" Foreground="#2B2B2B" FontWeight="SemiBold"/>
                    <Border CornerRadius="12" Background="#E9DDF7" Padding="12" Margin="0,6,0,0">
                        <PasswordBox x:Name="TxtPassword"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="4" Orientation="Vertical" VerticalAlignment="Bottom">
                    <TextBlock x:Name="LblError"
                               Foreground="#7A1414"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"
                               Visibility="Collapsed"/>

                    <Button Content="Login"
                            Height="44"
                            FontWeight="SemiBold"
                            Background="#F1F1F7"
                            Foreground="#1D1D1F"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnLogin_Click"/>

                    <Button Content="Exit"
                            Margin="0,10,0,0"
                            Height="40"
                            Background="#FFE7E7"
                            Foreground="#7A1414"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnExit_Click"/>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
