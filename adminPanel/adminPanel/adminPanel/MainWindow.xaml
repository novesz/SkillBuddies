<Window x:Class="adminPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SkillBuddies Admin" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#7FA0D8">

    <Window.Resources>

        <!-- Soft card shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="6" Opacity="0.20"/>

        <!-- Card container style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="#88FFFFFF"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Primary button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F1F1F7"/>
            <Setter Property="Foreground" Value="#1D1D1F"/>
            <Setter Property="BorderBrush" Value="#00FFFFFF"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger button -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FFE7E7"/>
            <Setter Property="Foreground" Value="#7A1414"/>
        </Style>

        <!-- Sidebar button -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1D1D1F"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="8,0" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid look -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#12FFFFFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2B2B2B"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Height" Value="42"/>
        </Style>

    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Background="#6FFFFFFF" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo / Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="38" Height="38" Fill="#FFEDC07A"/>
                    <TextBlock Text="SkillBuddies Admin Panel"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1D1D1F"/>
                </StackPanel>

                <!-- Search -->
                <!-- Search -->
                <Border Grid.Column="1" CornerRadius="16" Background="#E9DDF7" Padding="14,10"
        VerticalAlignment="Center" Margin="18,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Watermark -->
                        <TextBlock Text="Search users / tickets..."
                   Foreground="#6B5F7B"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding GlobalSearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding GlobalSearchText}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBox Background="Transparent"
                 BorderThickness="0"
                 FontSize="14"
                 Foreground="#3A3A3A"
                 Text="{Binding GlobalSearchText, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Column="1" Text="游댍" FontSize="16" Margin="10,0,0,0"
                   VerticalAlignment="Center" Foreground="#6B5F7B"/>
                    </Grid>
                </Border>


                <!-- Admin area -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Ellipse Width="38" Height="38" Fill="#FFFFFFFF" Stroke="#40FFFFFF" StrokeThickness="1"/>
                    <Button Content="Logout" Margin="12,0,0,0" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN -->
        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Background="#6FFFFFFF">
                <StackPanel>
                    <TextBlock Text="Menu" FontWeight="Bold" Foreground="#1D1D1F" FontSize="14" Margin="6,0,0,10"/>

                    <Button Content="游논 Users" Style="{StaticResource NavButton}" Background="#22FFFFFF"/>
                    <Button Content="游꿞 Tickets" Style="{StaticResource NavButton}" Margin="0,6,0,0"/>
                    <Button Content="游늵 Dashboard" Style="{StaticResource NavButton}" Margin="0,6,0,0"/>

                    <Separator Margin="0,14,0,14" Opacity="0.35"/>

                    <TextBlock Text="Quick actions" FontWeight="Bold" Foreground="#1D1D1F" FontSize="14" Margin="6,0,0,10"/>
                    <Button Content="Refresh" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Border>

            <!-- CONTENT -->
            <Grid Grid.Column="1" Margin="14,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LIST CARD -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Users / Tickets list"
                                       FontSize="16" FontWeight="Bold" Foreground="#1D1D1F"/>
                            <Border Margin="12,0,0,0" Background="#1AFFFFFF" CornerRadius="999" Padding="10,6">
                                <TextBlock Text="Tip: v치lts Users/Tickets-re a men칲ben"
                                           Foreground="#2B2B2B"/>
                            </Border>
                        </StackPanel>

                        <!-- SAMPLE DataGrid (ide majd Users vagy Tickets megy) -->
                        <DataGrid Grid.Row="1" Margin="0,14,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="140"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- DETAILS CARD -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="14,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Details"
                                   FontSize="16" FontWeight="Bold" Foreground="#1D1D1F"/>

                        <!-- Selected item info -->
                        <StackPanel Grid.Row="1" Margin="0,12,0,0">
                            <TextBlock Text="Selected:"
                                       FontWeight="SemiBold" Foreground="#2B2B2B"/>
                            <TextBlock Text="(ide j칬n a kiv치lasztott user / ticket c칤me)"
                                       Foreground="#1D1D1F" FontSize="14" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- For ticket reply -->
                        <StackPanel Grid.Row="2" Margin="0,16,0,0">
                            <TextBlock Text="Message / Reply" FontWeight="SemiBold" Foreground="#2B2B2B"/>
                            <Border Margin="0,8,0,0" Background="#10FFFFFF" CornerRadius="14" Padding="12">
                                <TextBox AcceptsReturn="True"
                                         Height="220"
                                         TextWrapping="Wrap"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#1D1D1F"
                                         Text="Ide 칤rhatsz v치laszt ticketre..."/>
                            </Border>

                            <CheckBox Content="Mark as resolved" Margin="0,10,0,0" Foreground="#1D1D1F"/>
                        </StackPanel>

                        <!-- Action buttons -->
                        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,16,0,0">
                            <Button Content="Ban / Unban user" Style="{StaticResource PrimaryButton}"/>
                            <Button Content="Delete user" Style="{StaticResource DangerButton}" Margin="0,8,0,0"/>
                            <Button Content="Send reply" Style="{StaticResource PrimaryButton}" Margin="0,8,0,0"/>
                        </StackPanel>

                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
